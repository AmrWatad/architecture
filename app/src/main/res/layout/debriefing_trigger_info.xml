<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="right"

    android:id="@+id/wrapper_pop_up_RelativeLayout">

    <LinearLayout
        android:id="@+id/main_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">



        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#103050"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            >
            <TextView
                android:id="@+id/btn"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:text="Category"
                android:layout_marginStart="8dp"
                android:textColor="#e3d5b1"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/btn_1"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:text="Home designe "
                android:textColor="#ffff"
                android:textSize="16dp"

                android:gravity="center"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="@+id/btn"
                app:layout_constraintTop_toBottomOf="@+id/btn"
                />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="170dp"
                android:layout_height="45dp"

                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=" Family Room Design"
                android:textColor="#ffff"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/btn_1"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="170dp"
                android:layout_height="45dp"

                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text=" Master Bedroom"
                android:textColor="#ffff"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/btn_2"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="#ffff"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/btn_1"
                app:layout_constraintStart_toStartOf="@+id/btn_1"
                app:layout_constraintTop_toBottomOf="@+id/btn_1" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:visibility="invisible"

                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="#ffff"
                app:layout_constraintEnd_toEndOf="@+id/btn_2"
                app:layout_constraintStart_toStartOf="@+id/btn_2"
                app:layout_constraintTop_toBottomOf="@+id/btn_2" />


        </android.support.constraint.ConstraintLayout>
        <ImageView
            android:id="@+id/open_full_view_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <View
        android:id="@+id/close_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/main_LinearLayout"/>

</RelativeLayout>